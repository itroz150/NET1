#!/bin/bash
set -e

echo "=== Installation propre GNS3 + Docker sur Debian ==="

# 1️⃣ Supprimer anciennes installations GNS3
echo "[1/9] Suppression des anciennes versions"
rm -f ~/.local/bin/gns3* /usr/local/bin/gns3*
pip3 uninstall -y gns3-gui gns3-server gns3 || true

# 2️⃣ Mettre à jour apt
echo "[2/9] Mise à jour des dépôts"
sudo apt update

# 3️⃣ Installer dépendances python + pipx
echo "[3/9] Installation des dépendances"
sudo apt install -y python3 python3-pip python3-venv python3-pyqt5 python3-pyqt5.qtsvg python3-pyqt5.qtwebsockets \
                    qemu-kvm qemu-utils libvirt-daemon-system libvirt-clients wireshark curl gnupg lsb-release apt-transport-https

# 4️⃣ Installer pipx (isolé pour GNS3)
echo "[4/9] Installation pipx"
python3 -m pip install --user pipx
python3 -m pipx ensurepath
export PATH="$HOME/.local/bin:$PATH"

# 5️⃣ Installer GNS3 via pipx
echo "[5/9] Installation GNS3 via pipx"
pipx install gns3-server
pipx install gns3-gui

# 6️⃣ Installer Docker officiel
echo "[6/9] Installation Docker"
sudo mkdir -p /etc/apt/keyrings
curl -fsSL https://download.docker.com/linux/debian/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg
echo \
"deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] \
https://download.docker.com/linux/debian $(lsb_release -cs) stable" \
| sudo tee /etc/apt/sources.list.d/docker.list > /dev/null
sudo apt update
sudo apt install -y docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin
sudo systemctl enable --now docker

# 7️⃣ Ajouter l'utilisateur aux groupes
echo "[7/9] Configuration des groupes"
sudo usermod -aG docker,libvirt,kvm,wireshark "$USER"

# 8️⃣ Autoriser Wireshark sans root
echo "[8/9] Configuration Wireshark"
sudo dpkg-reconfigure wireshark-common

# 9️⃣ Finitions
echo "[9/9] Vérification"
echo "GNS3 GUI : $(which gns3)"
echo "GNS3 Server : $(which gns3server)"
echo "Docker : $(which docker)"

echo ""
echo "⚠️ Déconnexion / Reconnexion nécessaire pour les groupes."
echo "Après ça, teste :"
echo "  docker ps"
echo "  gns3"
echo "  gns3server"
echo ""
echo "Dans GNS3 : Edit → Preferences → Docker → Test"
